<resources>

    <style name="TituloFuturista">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SubtituloFuturista">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="InputLayoutFuturista">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="EditTextFuturista">
        <item name="android:background">@drawable/bg_input_futurista</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="BotaoFuturista" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item> <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item> <item name="elevation">6dp</item>
        <item name="android:backgroundTint">@color/novo_atacarejo_blue</item>
    </style>

    <style name="BotaoPerigoFuturista" parent="BotaoFuturista">
        <item name="android:backgroundTint">@color/error_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog_rounded</item>
    </style>

</resources>