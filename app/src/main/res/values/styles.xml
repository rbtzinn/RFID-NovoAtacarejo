<resources>

    <style name="BotaoBase" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BotaoPrimario" parent="BotaoBase">
        <item name="android:backgroundTint">@color/novo_atacarejo_blue</item>
    </style>

    <style name="BotaoSucesso" parent="BotaoBase">
        <item name="android:backgroundTint">@color/success_green</item>
    </style>

    <style name="BotaoAviso" parent="BotaoBase">
        <item name="android:backgroundTint">@color/warning_yellow</item>
    </style>

    <style name="BotaoPerigo" parent="BotaoBase">
        <item name="android:backgroundTint">@color/error_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
    </style>


    <style name="TituloTela">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/novo_atacarejo_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubtituloTela">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog_rounded</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="colorAccent">@color/novo_atacarejo_blue</item>
    </style>

</resources>