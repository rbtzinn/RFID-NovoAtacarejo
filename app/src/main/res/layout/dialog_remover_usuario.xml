<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">

    <TextView
        style="@style/TituloFuturista"
        android:layout_gravity="center"
        android:text="Remover Usuário" />

    <TextView
        android:id="@+id/tvMsgDialog"
        style="@style/SubtituloFuturista"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="Selecione o motivo da ação:"/>

    <RadioGroup
        android:id="@+id/rgMotivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input_futurista"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/rbDesligamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desligamento de usuário"
            android:checked="true"
            android:buttonTint="@color/novo_atacarejo_blue"/>

        <RadioButton
            android:id="@+id/rbOutros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outro motivo"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/novo_atacarejo_blue"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancelarDialog"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="@color/text_secondary"/>

        <Button
            android:id="@+id/btnRemoverDialog"
            style="@style/BotaoPerigoFuturista"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Remover"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>