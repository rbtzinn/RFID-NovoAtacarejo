<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="28dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_dialog_rounded">

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_delete"
        android:tint="#D32F2F"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvMsgDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual o motivo da remoção?"
        android:textAlignment="center"
        android:textColor="#222"
        android:textSize="17sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/rgMotivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbDesligamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desligamento de usuário"
            android:textSize="16sp"
            android:textColor="#222"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbOutros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outros"
            android:textSize="16sp"
            android:textColor="#222"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp">

        <Button
            android:id="@+id/btnCancelarDialog"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:backgroundTint="#AAAAAA"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnRemoverDialog"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text="Remover"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</LinearLayout>
