<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Logo Novo Atacarejo"
        android:src="@drawable/logo_novo_atacarejo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TituloTela"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Inventário RFID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />


    <LinearLayout
        android:id="@+id/import_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnImportarPlanilha"
                style="@style/BotaoPrimario"
                android:onClick="onImportarPlanilha"
                android:text="Importar Planilha"
                app:icon="@drawable/ic_upload_file"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btnLimparPlanilha"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete_sweep"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Limpar planilha importada"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/btnImportarPlanilha"
                app:layout_constraintBottom_toBottomOf="@id/btnImportarPlanilha"
                app:layout_constraintEnd_toEndOf="@id/btnImportarPlanilha"
                android:layout_marginEnd="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnImportarSetor"
                style="@style/BotaoPrimario"
                android:onClick="onImportarSetor"
                android:text="Importar Setores"
                app:icon="@drawable/ic_upload_file"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btnLimparSetor"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete_sweep"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Limpar setores importados"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/btnImportarSetor"
                app:layout_constraintBottom_toBottomOf="@id/btnImportarSetor"
                app:layout_constraintEnd_toEndOf="@id/btnImportarSetor"
                android:layout_marginEnd="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnEscolherLoja"
        style="@style/BotaoPrimario"
        android:onClick="onEscolherLoja"
        android:layout_marginTop="12dp"
        android:text="Escolher Loja"
        app:icon="@drawable/ic_store"
        app:layout_constraintTop_toBottomOf="@id/import_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGerenciarUsuarios"
        style="@style/BotaoAviso"
        android:layout_marginTop="12dp"
        android:text="Gerenciar Usuários"
        android:visibility="gone"
        tools:visibility="visible"
        app:icon="@drawable/ic_people"
        app:layout_constraintTop_toBottomOf="@id/btnEscolherLoja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLogout"
        style="@style/BotaoPerigo"
        android:layout_width="match_parent"
        android:text="Sair"
        app:icon="@drawable/ic_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>