<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <View
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_card_gradient"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="208dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_input_futurista"
            android:contentDescription="Logo Novo Atacarejo"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_novo_atacarejo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTitle"
            style="@style/TituloFuturista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá, Bem-vindo!"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgLogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnImportarPlanilha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onImportarPlanilha"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgIconPlanilha"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_upload_file"
                        app:tint="@color/novo_atacarejo_blue"
                        android:background="@drawable/bg_input_futurista"
                        android:padding="8dp"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStatusPlanilha"
                            style="@style/TituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Importar Dados" />

                        <TextView
                            style="@style/SubtituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carregue sua planilha ou setores" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnLimparPlanilha"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_delete_sweep"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/error_red"
                        android:visibility="gone"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnImportarSetor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onImportarSetor"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgIconSetor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_upload_file"
                        app:tint="@color/novo_atacarejo_blue"
                        android:background="@drawable/bg_input_futurista"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStatusSetor"
                            style="@style/TituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Importar Setores" />

                        <TextView
                            style="@style/SubtituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carregar apenas os setores (localizações)" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnLimparSetor"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_delete_sweep"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/error_red"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnEscolherLoja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onEscolherLoja"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_store"
                        app:tint="@color/novo_atacarejo_blue"
                        android:background="@drawable/bg_input_futurista"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Iniciar Inventário" />

                        <TextView
                            style="@style/SubtituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selecione a loja e comece a ler" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        app:tint="@color/text_hint"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGerenciarUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_people"
                        app:tint="@color/warning_yellow"
                        android:background="@drawable/bg_input_futurista"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Usuários" />

                        <TextView
                            style="@style/SubtituloFuturista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gerenciar acessos" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnLogout"
                style="@style/BotaoPerigoFuturista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair do Sistema"
                app:icon="@drawable/ic_logout"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>