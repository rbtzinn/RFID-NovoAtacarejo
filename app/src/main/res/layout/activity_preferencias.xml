<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="20dp">

    <CheckBox
        android:id="@+id/cbConfirmacaoDupla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir confirmação dupla para finalizar pelo volume" />

    <CheckBox
        android:id="@+id/cbVibrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrar ao finalizar" />

    <CheckBox
        android:id="@+id/cbAutoSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-salvar alterações ao editar" />

</LinearLayout>
